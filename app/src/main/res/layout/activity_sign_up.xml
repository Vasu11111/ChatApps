<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignUp">

    <ImageView
        android:id="@+id/images_signup"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="120dp"
        android:src="@drawable/chat"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <EditText
        android:id="@+id/name_signup"
        android:layout_width="341dp"
        android:layout_height="48dp"
        android:layout_marginTop="40dp"
        android:hint="Name"
        android:inputType="textEmailAddress"
        android:paddingLeft="10dp"
        android:ems="10"
        android:layout_centerHorizontal="true"
        android:textColor="@color/black"
        android:layout_below="@+id/images_signup"
        android:background="@drawable/boder"
        app:layout_constraintEnd_toEndOf="@+id/images_signup"
        app:layout_constraintStart_toStartOf="@+id/images_signup"
        app:layout_constraintTop_toBottomOf="@+id/images_signup"/>

    <EditText
        android:id="@+id/email_signup"
        android:layout_width="341dp"
        android:layout_height="48dp"
        android:layout_marginTop="40dp"
        android:hint="Email"
        android:inputType="text"
        android:paddingLeft="10dp"
        android:ems="10"
        android:layout_centerHorizontal="true"
        android:textColor="@color/black"
        android:layout_below="@+id/name_signup"
        android:background="@drawable/boder"
        app:layout_constraintEnd_toEndOf="@+id/name_signup"
        app:layout_constraintStart_toStartOf="@+id/name_signup"
        app:layout_constraintTop_toBottomOf="@+id/name_signup"/>

    <EditText
        android:id="@+id/password_signup"
        android:layout_width="341dp"
        android:layout_height="48dp"
        android:layout_marginTop="40dp"
        android:hint="Password"
        android:inputType="text"
        android:paddingLeft="10dp"
        android:ems="10"
        android:layout_centerHorizontal="true"
        android:textColor="@color/black"
        android:layout_below="@+id/email_signup"
        android:background="@drawable/boder"
        app:layout_constraintEnd_toEndOf="@+id/email_signup"
        app:layout_constraintStart_toStartOf="@+id/email_signup"
        app:layout_constraintTop_toBottomOf="@+id/email_signup"/>

    <Button
    android:id="@+id/signup_button"
    android:layout_width="150dp"
    android:layout_height="48dp"
    android:layout_marginTop="32dp"
    android:background="@drawable/button_baceground"
    android:text="Login"
    android:layout_centerHorizontal="true"
    android:layout_below="@+id/password_signup"
    android:textAllCaps="false"
    android:textColor="@color/white"
    android:textSize="20sp"
    app:layout_constraintEnd_toEndOf="@+id/password_signup"
    app:layout_constraintStart_toStartOf="@+id/password_signup"
    app:layout_constraintTop_toBottomOf="@+id/password_signup" />



</RelativeLayout>